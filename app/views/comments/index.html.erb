<p id="notice"><%= notice %></p>

<h1>Comentários:</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Comentario</th>
      <th>Publicação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_email %></td>
        <td><%= comment.body %></td>
        <td><%= comment.idea_id %></td>
        <td><%if can? :read, comment%><%= link_to 'Ver mais', comment %><%end%></td>
        <td><%if can? :update, comment%><%= link_to 'Editar', edit_comment_path(comment) %><%end%></td>
        <td><%if can? :destroy, comment%><%= link_to 'Excluir', comment, method: :delete, data: { confirm: 'Are you sure?' } %><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo comentário', new_comment_path %>
